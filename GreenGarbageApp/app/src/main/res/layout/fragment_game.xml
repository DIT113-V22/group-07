<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:id="@+id/GGTruckIv"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="0dp"
            app:srcCompat="@drawable/garbagetruck_2"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

    <ImageView
        android:id="@+id/cameraViewIv"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:contentDescription="@string/cameraview" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingStart="10dp"
            android:paddingEnd="10dp">

            <ImageView
                android:id="@+id/speedometerIv"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/speedometer" />

            <TextView
                android:id="@+id/speedometerIndicatorTv"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="@string/_0_00km_h"
                android:textColor="#0C0B0B"
                android:textSize="25sp" />

            <ImageView
                android:id="@+id/distanceIv"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/distance" />

            <TextView
                android:id="@+id/distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="@string/_0m"
                android:textColor="#0C0B0B"
                android:textSize="25sp" />

        </LinearLayout>

        <com.example.joystickjhr.JoystickJhr
            android:id="@+id/joystick"
            android:layout_width="165dp"
            android:layout_height="179dp"
            android:layout_gravity="center_horizontal"
            android:backgroundTintMode="add"
            app:alphaCircleFirst="300"
            app:alphaCircleSecond="100"
            app:colorFirst="#8BC34A"
            app:colorSecond="#8B0018"
            app:colorText="#D5D8E7"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.569"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.809"
            app:radioCircle="0.4"
            app:relleno="true"
            app:textJoy=""
            app:textSizeJoy="70"
            app:xtextOffset="-55"
            app:ytextOffset="-15"
            tools:ignore="MissingClass" />

    </LinearLayout>

</LinearLayout>
